generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "mongodb"
}


// Define a model called User.
model User {
  id String @id @map("_id") //@id means that this field will be used as primary key and mapped to _id field in MongoDB database.
  name String?
  email String @unique //@unique means that this field will be unique across all records.
  password String
  image String?
  createdAt DateTime @default(now()) //@default(now()) means that this field will be automatically set to the current date and time when the record is created.
  updatedAt DateTime @updatedAt //@updatedAt means that this field will be automatically updated when the record is updated.
}

// Define a model called Account.
model Account {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  userId            String  @db.ObjectId
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.String
  access_token      String? @db.String
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.String
  session_state     String?
 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
 
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
 
  @@unique([provider, providerAccountId])
}